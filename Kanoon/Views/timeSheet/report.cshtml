    </script>
    <style>
        .dateSelect {
            height: 10vw;
            width: 7.83vw;
            min-width: 7.83vw;
            padding: 0;
            margin-right: 0;
            margin-top: 3vw;
            font-size: 3vw;
            font-weight: 500;
            border: none;
            border-radius: 2vw;
            background-color: antiquewhite;
            box-shadow: 0 25px 40px -22px #3c4a56;
        }

        .dateTitle {
            height: 10vw;
            width: 20vw;
            min-width: 200px;
            padding: 2vw 0;
            margin-right: 2.5vw;
            margin-top: 3vw;
            font-size: 3vw;
            font-weight: 600;
            border: none;
        }

        .UItem {
            width: 100%;
            background-color: white;
            border-radius: 1vw;
            padding: 1vw 2vw 2vw 2vw;
            margin: 1vw;
            line-height: 1.5;
            align-items: center;
            font-size: 2vw;
            min-height: 6vw;
        }

        .listItems {
            float: right;
            text-align: center;
            width: 17vw
        }

        #main-wrapper {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: calc(100vh - 70px);
        }


        .form-wrapper {
            width: 100%;
            max-width: 72vw;
        }

        .form-input {
            margin: auto;
            height: 70vw;
            width: 70vw;
            background-color: #daf3c2;
            font-weight: 400;
            font-size: 45px;
            border: none;
            border-radius: 50vw;
            padding: 10vw;
            box-shadow: 0 25px 40px -22px #3c4a56;
        }


        #navbar .menuUserPic {
            width: 20vw;
            height: 20vw;
            border-radius: 50%;
        }

        .userName {
            font-size: 5vw;
            font-weight: 600;
            color: white;
            text-align: center;
            display: block;
            margin: 4vw 8px 0;
        }

        .stopwatch {
            font-size: 4vw;
            text-align: center;
        }



        .form-pop {
            margin: auto;
            display: none;
            position: absolute;
            z-index: 99999;
        }

        .form-cont {
            width: 65vw;
            padding: 3vw;
            background-color: white;
            border-radius: 40px;
        }

            .form-cont .btn {
                background-color: #74e804;
                color: black;
                padding: 2vw;
                border: none;
                cursor: pointer;
                width: 100%;
                margin-bottom: 2vw;
                opacity: 0.8;
                font-weight: 600;
            }

            .form-cont .cancel {
                background-color: #e54d60;
            }

        .description {
            width: 100%;
            height: 25vw;
            border-color: #e54d60;
            border-width: 1vw;
            border-radius: 50px;
            font-size: 3vw;
            padding: 1vw;
        }




        .btn {
            background-color: green;
            color: white;
            padding: 4%;
            border-radius: 7px;
            margin: 3% 14%;
        }

        .cancel {
            background-color: orangered;
        }

        button {
            border: none;
            text-decoration: none;
            color: #f997a0;
            font-weight: normal;
            font-size: 45px;
            background-color: rgba(0,0,0,0);
        }
